@model IEnumerable<Department>

@{
    ViewBag.Title = "Управление на изтритите отдели";
}
<h1 class="h3 mb-4">Изтрити отдели</h1>

<p>
    <a asp-action="Index" class="btn btn-success">Виж актуални</a>
</p>

@if (!Model.Any(d => d.IsDeleted))
{
    <div class="alert alert-info">Няма изтрити отдели.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle table-data">
            <thead class="table-light">
                <tr>
                    <th>Име</th>
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <th class="action-headings-table">Действия</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Where(d => d.IsDeleted).OrderBy(d => d.Name))
                {
                    <tr>
                        <td>@department.Name</td>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <td class="d-flex justify-content-center">
                                <a asp-action="Restore" asp-route-id="@department.Id" class="btn btn-sm btn-primary m-1">Възстанови</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}