@model IEnumerable<Department>

<h1>Departments</h1>
<a asp-action="Create" class="btn btn-primary">Add Department</a>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.Id</td>
            <td>@department.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>