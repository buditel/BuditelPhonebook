@model Person
@{
    ViewBag.Title = "Редактирай контакт";
}
<h1 class="h3 mb-4">@ViewBag.Title</h1>

<form method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label">Име</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" required>
        <div class="invalid-feedback">Моля, въведете име.</div>
    </div>
    <div class="mb-3">
        <label class="form-label">Презиме</label>
        <input type="text" class="form-control" name="MiddleName" value="@Model.MiddleName">
    </div>
    <div class="mb-3">
        <label class="form-label">Фамилия</label>
        <input type="text" class="form-control" name="LastName" value="@Model.LastName" required>
        <div class="invalid-feedback">Моля, въведете фамилия.</div>
    </div>
    <div class="mb-3">
        <label class="form-label">Имейл</label>
        <input type="email" class="form-control" name="Email" value="@Model.Email" required>
        <div class="invalid-feedback">Моля, въведете валиден имейл.</div>
    </div>
    <div class="mb-3">
        <label class="form-label">Телефон</label>
        <input type="text" class="form-control" name="PhoneNumber" value="@Model.BusinessPhoneNumber">
    </div>
    <div class="mb-3">
        <label class="form-label">Роля</label>
        <input type="text" class="form-control" name="Role" value="@Model.Role">
    </div>
    <div class="mb-3">
        <label class="form-label">Отдел</label>
        <input type="text" class="form-control" name="Department" value="@Model.Department">
    </div>

    <button type="submit" class="btn btn-primary">Запиши</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Отказ</a>
</form>

@section Scripts {
    <script>
        // Example of client-side validation (optional)
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
