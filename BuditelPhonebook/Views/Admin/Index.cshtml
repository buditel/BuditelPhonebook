@model IEnumerable<Person>
@using static BuditelPhonebook.Common.EntityValidationConstants.Person

@{
    ViewBag.Title = "Управление на контактите";
}

<h1 class="h3 mb-4">Управление на контактите</h1>

<div class="d-flex flex-wrap justify-content-between mb-3">
    <div class="mb-2">
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success mb-2">Добави нов контакт</a>
        }
        <a asp-action="DeletedIndex" class="btn btn-primary mb-2">Виж изтрити</a>
    </div>
    <div>
        <a asp-action="UserRoles" class="btn btn-outline-primary mb-2">Потребителски права</a>
    </div>
</div>

@if (!Model.Any(p => !p.IsDeleted))
{
    <div class="alert alert-info">Няма налични контакти.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Име</th>
                    <th>Презиме</th>
                    <th>Фамилия</th>
                    <th>Имейл</th>
                    <th>Личен телефон</th>
                    <th>Роля</th>
                    <th>Отдел</th>
                    <th>Дата на постъпване</th>
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <th style="width:120px;">Действия</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model
               .Where(p => !p.IsDeleted)
               .OrderBy(p => p.FirstName)
               .ThenBy(p => p.LastName))
                {
                    <tr>
                        <td>@p.FirstName</td>
                        <td>@p.MiddleName</td>
                        <td>@p.LastName</td>
                        <td>@p.Email</td>
                        <td>@p.PersonalPhoneNumber</td>
                        <td>@p.Role.Name</td>
                        <td>@p.Department.Name</td>
                        <td>@p.HireDate.ToString(HireAndLeaveDateFormat)</td>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary w-100">Редактирай</a>
                                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger w-100">Изтрий</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
