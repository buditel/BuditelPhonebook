@model IEnumerable<Person>
@{
    ViewBag.Title = "=Управление на контактите";
}
<h1 class="h3 mb-4">Управление на контактите</h1>
<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Добави нов контакт</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">Няма налични контакти.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
        <tr>
            <th>Име</th>
            <th>Презиме</th>
            <th>Фамилия</th>
            <th>Имейл</th>
            <th>Телефон</th>
            <th>Роля</th>
            <th>Отдел</th>
            <th style="width:120px;"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.MiddleName</td>
                <td>@p.LastName</td>
                <td>@p.Email</td>
                <td>@p.BusinessPhoneNumber</td>
                <td>@p.Role</td>
                <td>@p.Department</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = p.Id })">Редактирай</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = p.Id })">Изтрий</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}